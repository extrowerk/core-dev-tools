function hook_preconfigure {
	configure_opts="${configure_opts} --prefix=/usr"
	configure_opts="${configure_opts} --disable-vi"
	configure_opts="${configure_opts} --disable-nls"
	configure_opts="${configure_opts} --enable-history=simple"
	case ${TARGET_SYSNAME} in
	qnx4)
		export CC="$CC -Wc,-fi-unix.h"
		export LDFLAGS="-lunix"
		configure_opts="${configure_opts} --target=i386-pc-qnx"
		;;
	esac
}

function hook_pinfo {
	case ${SYSNAME} in
	win32)	exe_suffix=".exe" 	;;
	*)	exe_suffix=""		;;
	esac
    gen_pinfo -e make usr/bin USE="%1>%C --help" "DESCRIPTION=Dependency/recompilation checking" "FINFO=0 0 1775"
}
